<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="reut">

        <createTable tableName="customers" schemaName="customers">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="telephoneNumber" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="homeNumber" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="flatNumber" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>