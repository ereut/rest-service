<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="4" author="reut">
        <addColumn tableName="cards" schemaName="customers">
            <column name="title" type="varchar(25)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="customers" schemaName="customers">
            <column name="login" type="varchar(25)">
                <constraints nullable="true"/>
            </column>
            <column name="password" type="varchar(25)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>